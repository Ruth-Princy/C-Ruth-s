#include<stdio.h>
int main()
{

    int i,j,n;
    scanf("%d",&n);

}
Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=0;i<n;i++){
            for(int j=0;j<n;j++){
                if(j==0||j==n-1){
                    System.out.printf("* ");
                }
                else if(i==j && i<=(n-1)/2)
                {
                      System.out.printf("* ");
                }
                else if(i+j==n-1 && i<=(n-1)/2)
                {
                     System.out.printf("* ");
                }
                else{
                    System.out.printf("  ");
                }
            }
            System.out.println();
        }
